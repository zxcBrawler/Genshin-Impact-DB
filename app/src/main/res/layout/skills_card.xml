<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#27403A">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/image_skill"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:text="sdds"
            android:textAlignment="center"
            android:textColor="#D3C7A1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_skill"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/description_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_skill"

            android:layout_margin="10dp"
            android:layout_toRightOf="@id/image_skill"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:paddingBottom="10dp"
            android:text="123"
            android:textAlignment="center"
            android:textColor="#D3C7A1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/type_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_skill"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:layout_toRightOf="@id/image_skill"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:text="rhbn"
            android:textAlignment="center"
            android:textColor="#D3C7A1"
            android:textSize="13sp" />





    </RelativeLayout>

</androidx.cardview.widget.CardView>